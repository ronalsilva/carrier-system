{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug Wallet API",
			"type": "node",
			"request": "launch",
			// "preLaunchTask": "kill-port-3002",
			"program": "${workspaceFolder}/src/app.ts",
			"runtimeExecutable": "node",
			"runtimeArgs": [
				"--import",
				"tsx"
			],
			"env": {
				"NODE_ENV": "development"
			},
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"skipFiles": [
				"<node_internals>/**"
			],
			"sourceMaps": true,
			"resolveSourceMapLocations": [
				"${workspaceFolder}/**",
				"!**/node_modules/**"
			],
			"restart": true,
			"protocol": "inspector",
			"cwd": "${workspaceFolder}",
			"outputCapture": "std"
		},
		{
			"name": "Debug Wallet API (Attach)",
			"type": "node",
			"request": "attach",
			"port": 9229,
			"restart": true,
			"localRoot": "${workspaceFolder}",
			"remoteRoot": "${workspaceFolder}",
			"protocol": "inspector",
			"skipFiles": [
				"<node_internals>/**"
			],
			"sourceMaps": true,
			"resolveSourceMapLocations": [
				"${workspaceFolder}/**",
				"!**/node_modules/**"
			]
		}
	]
}
